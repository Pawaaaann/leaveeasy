# Server Environment Variables
NODE_ENV=production
PORT=5000

# Firebase Server Configuration (for backend)
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project-id","private_key_id":"your-key-id"...}
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id

# Client Environment Variables (prefixed with VITE_ for Vite builds)
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
VITE_FIREBASE_APP_ID=your-app-id

# Production API URL (optional - defaults to hardcoded URL if not set)
VITE_API_URL=https://your-app-name.onrender.com